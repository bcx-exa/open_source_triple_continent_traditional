{
  "name": "Cross_Region_Active-Active",
  "version": "0.0.1",
  "description": "Cross Region Active-Active Backend (App)",
  "main": "src/app.ts",
  "scripts": {
    "serve": "tsc src/app.ts -w & pm2 start dist/app.js --watch",
    "dev": "eslint . --ext .ts && cross-env RUN_LOCAL=true nodemon",
    "offline": "eslint . --ext .ts && serverless offline start",
    "tsoa": "tsoa spec-and-routes",
    "test": "jest --coverage",
    "lint": "eslint . --ext .ts",
    "debug": "cross-env RUN_LOCAL=true nodemon --inspect=3333 src/app.ts",
    "deploy:dev": "sls deploy --config iac/resources/acm.serverless.yml --stage dev && sls deploy --stage dev ",
    "destroy:dev": "sls remove --stage dev && sls remove --config iac/resources/acm.serverless.yml --stage dev ",
    "deploy:uat": "sls deploy --config iac/resources/acm.serverless.yml --stage uat && sls deploy --stage uat ",
    "deploy:prod": "sls deploy --config iac/resources/acm.serverless.yml --stage prod && sls deploy --stage prod"
  },
  "dependencies": {
    "@types/aws-sdk": "^2.7.0",
    "@types/express": "^4.17.9",
    "@types/sharp": "^0.26.1",
    "@types/shelljs": "^0.8.8",
    "@types/swagger-ui-express": "^4.1.2",
    "aws-lambda": "^1.0.6",
    "aws-sdk": "^2.797.0",
    "aws-xray-sdk": "^3.2.0",
    "aws-xray-sdk-core": "^3.2.0",
    "aws-xray-sdk-express": "^3.2.0",
    "axios": "^0.21.0",
    "bcx-eco-system-libary": "0.0.73",
    "dotenv": "^8.2.0",
    "dotenv-flow": "^3.2.0",
    "express": "^4.17.1",
    "moment": "^2.29.1",
    "nodemailer": "^6.4.17",
    "nodemon": "^2.0.6",
    "pm2": "^4.5.4",
    "reflect-metadata": "^0.1.13",
    "serverless": "^2.18.0",
    "serverless-http": "^2.6.0",
    "sharp": "^0.26.3",
    "source-map-support": "^0.5.10",
    "supertest": "^6.0.1",
    "swagger-express-ts": "^1.0.1",
    "swagger-ui-express": "^4.1.5",
    "tsoa": "^3.4.0",
    "typeorm": "^0.2.29",
    "typeorm-aurora-data-api-driver": "^1.4.0",
    "typescript-rest": "^3.0.2",
    "uuid": "^8.3.2"
  },
  "devDependencies": {
    "@types/aws-lambda": "^8.10.64",
    "@types/jest": "^26.0.15",
    "@types/node": "^14.14.9",
    "@types/serverless": "^1.78.10",
    "@types/uuid": "^8.3.0",
    "@typescript-eslint/eslint-plugin": "^4.8.1",
    "@typescript-eslint/parser": "^4.8.1",
    "eslint": "^7.14.0",
    "fork-ts-checker-webpack-plugin": "^6.0.3",
    "jest": "^26.6.3",
    "jest-cli": "^26.6.3",
    "jest-html-reporter": "^3.3.0",
    "prettier": "^2.2.0",
    "serverless-domain-manager": "^5.1.0",
    "serverless-dotenv-plugin": "^3.1.0",
    "serverless-offline": "^6.8.0",
    "serverless-webpack": "^5.3.5",
    "ts-jest": "^26.4.4",
    "ts-loader": "^8.0.11",
    "ts-node": "^9.0.0",
    "typescript": "^4.1.2",
    "webpack": "^5.6.0",
    "webpack-node-externals": "^2.5.2"
